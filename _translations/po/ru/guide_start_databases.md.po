"\n"
"<?= $htmlForm->open() ?>\n"
"    <?= Field::text($form, 'title')->required() ?>\n"
"    <?= Field::textarea($form, 'text')->required() ?>\n"
"    <?= Html::submitButton('Save') ?>\n"
"<?= $htmlForm->close() ?>\n"
