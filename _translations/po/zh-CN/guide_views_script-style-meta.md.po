#. type: Title ###
#: ../src/guide/views/script-style-meta.md
#, no-wrap
msgid "Registering Inline JavaScript"
msgstr ""

#. type: Plain text
#: ../src/guide/views/script-style-meta.md
msgid "Add inline JavaScript code with `registerJs()`:"
msgstr ""

#. type: Fenced code block (php)
#: ../src/guide/views/script-style-meta.md
#, no-wrap
msgid ""
"// Register inline JavaScript\n"
"$this->registerJs('\n"
"    document.addEventListener(\"DOMContentLoaded\", function() {\n"
"        console.log(\"Page loaded!\");\n"
"        initializeComponents();\n"
"    });\n"
"', WebView::POSITION_END);\n"
"\n"
"// Register JavaScript that should run when DOM is ready\n"
"$this->registerJs('\n"
"    function showAlert(message) {\n"
"        alert(message);\n"
"    }\n"
"', WebView::POSITION_READY);\n"
msgstr ""

