msgstr ""

#. type: Plain text
#: ../src/guide/views/script-style-meta.md
msgid "Example layout showing where each position is rendered:"
msgstr ""

#. type: Fenced code block (php)
#: ../src/guide/views/script-style-meta.md
#, no-wrap
msgid ""
"<?php\n"
"\n"
"declare(strict_types=1);\n"
"\n"
"/**\n"
