" */\n"
"?>\n"
"<?php $this->beginPage() ?>\n"
"<!DOCTYPE html>\n"
"<html>\n"
"<head>\n"
"    <!-- POSITION_HEAD resources rendered here -->\n"
"    <?php $this->head() ?>\n"
"</head>\n"
"<body>\n"
"    <!-- POSITION_BEGIN resources rendered here -->\n"
"    <?php $this->beginBody() ?>\n"
"    \n"
"    <main>\n"
"        <?= $content ?>\n"
"    </main>\n"
"    \n"
"    <!-- POSITION_END, POSITION_READY, POSITION_LOAD resources rendered here -->\n"
"    <?php $this->endBody() ?>\n"
"</body>\n"
"</html>\n"
"<?php $this->endPage() ?>\n"
