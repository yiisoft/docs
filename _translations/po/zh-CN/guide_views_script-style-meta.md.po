#: ../src/guide/views/script-style-meta.md
#, no-wrap
msgid ""
"// Read CSS from a file and register as inline CSS\n"
"$this->registerCssFromFile('/path/to/dynamic-styles.css', WebView::POSITION_HEAD, [\n"
"    'id' => 'dynamic-styles',\n"
"]);\n"
msgstr ""

