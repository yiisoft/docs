"<body>\n"
"<?php $this->beginBody() ?>\n"
"\n"
"<div class=\"header\">\n"
"    <a href=\"/\">\n"
"        <?= Html::encode($applicationParams->name) ?>\n"
"    </a>\n"
"</div>\n"
"\n"
"<div class=\"content\">    \n"
"    <?= $content ?>\n"
"</div>\n"
"\n"
"<div class=\"footer\">\n"
"    Â© <?= date('Y') ?>  <?= Html::encode($applicationParams->name) ?>    \n"
