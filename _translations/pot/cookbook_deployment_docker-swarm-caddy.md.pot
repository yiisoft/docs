#: ../src/cookbook/deployment/docker-swarm-traefik.md
#, no-wrap
msgid ""
"# Create secrets\n"
"echo \"database_password\" | docker secret create db_password -\n"
"echo \"api_key\" | docker secret create api_key -\n"
msgstr ""

#. type: Plain text
#: ../src/cookbook/deployment/docker-swarm-caddy.md
#: ../src/cookbook/deployment/docker-swarm-traefik.md
